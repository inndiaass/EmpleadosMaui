<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaMaui.Resources.Styles.Templates.SmallCardView"
             x:Name="this"
             BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Gray900}}"
>

    <Border BindingContext="{x:Reference this}"
        BackgroundColor="{Binding CardColor}"
        Stroke="{Binding BorderColor}"
        >
        
            <!--Lo mismo que hemos hecho en el shell lo hacemos con esto para que cambie de color tambien con el cambio de tema-->
            <Grid ColumnDefinitions="Auto, *">
                <Border Grid.Column="0"
                HeightRequest="40" WidthRequest="40"
                StrokeShape="RoundRectangle 20"
                Margin="0,0,15,0">

                   <Label Text="{Binding Icono}"
                   FontFamily="FontAwesome 6 Free Solid" 
                   FontSize="20"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="White"/>
                </Border>

            <Label Grid.Column="1"
               Text="{Binding Nombre}"
               VerticalOptions="Center"
               FontSize="18"
               FontAttributes="Bold"></Label>
            </Grid>
    </Border>
</ContentView>
