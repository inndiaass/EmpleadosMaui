<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaMaui.Views.DepartmentDetailPage"
             Title="Detalle del Departamento"
             BackgroundColor="#F5F5F7">

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <BoxView HeightRequest="150" Color="#2B3A67" />

            <VerticalStackLayout Spacing="15" Padding="30" Margin="0,-60,0,0">

                <Frame CornerRadius="60"
                       HeightRequest="120"
                       WidthRequest="120"
                       Padding="0"
                       IsClippedToBounds="True"
                       HorizontalOptions="Center"
                       BorderColor="White"
                       HasShadow="True">
                    <Image Aspect="AspectFill">
                        <Image.Source>
                            <UriImageSource Uri="{Binding Department.ImageUrl}"
                                            CacheValidity="10:00:00:00" />
                        </Image.Source>
                    </Image>
                </Frame>

                <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                    <Label Text="{Binding Department.Name}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#212121"
                           HorizontalTextAlignment="Center" />

                    <Label Text="{Binding EmployeesCount, StringFormat='Empleados: {0}'}"
                           FontSize="14"
                           TextColor="#616161"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

                <BoxView HeightRequest="1" Color="#E0E0E0" Margin="0,10" />

                <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                    <Button Text="Editar"
                            Clicked="OnEditClicked" />
                    <Button Text="Eliminar"
                            BackgroundColor="#D32F2F"
                            TextColor="White"
                            Clicked="OnDeleteClicked" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
