<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaMaui.Views.DepartmentUpdate"
             Title="Editar Departamento">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Nombre" />
            <Entry Text="{Binding Department.Name}" Placeholder="Nombre del departamento" />

            <Label Text="Imagen (URL)" />
            <Entry Text="{Binding Department.ImageUrl}" Placeholder="https://..." />

            <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
                <Button Text="Cancelar" Command="{Binding CancelCommand}" />
                <Button Text="Guardar" Command="{Binding SaveCommand}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
